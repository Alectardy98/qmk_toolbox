<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <RootNamespace>QMK_Toolbox</RootNamespace>
        <ImplicitUsings>false</ImplicitUsings>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <Nullable>disable</Nullable>
        <BuiltInComInteropSupport>false</BuiltInComInteropSupport>
        <PublishTrimmed>false</PublishTrimmed>
    </PropertyGroup>

    <ItemGroup>
        <AvaloniaResource Include="Resources\**" />
        <None Remove=".gitignore" />
    </ItemGroup>

    <ItemGroup>
        <TrimmerRootDescriptor Include="Roots.xml" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="0.10.18" />
        <PackageReference Include="Avalonia.Desktop" Version="0.10.18" />
        <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="0.10.18" />
        <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.18" />
        <PackageReference Include="MessageBox.Avalonia" Version="2.1.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.1" />
        <PackageReference Include="System.Configuration.ConfigurationManager" Version="8.0.1" />
        <PackageReference Include="System.Security.Permissions" Version="8.0.0" />
        <PackageReference Include="XamlNameReferenceGenerator" Version="1.5.1" />
        <PackageReference Include="LibUsbDotNet" Version="3.0.102-alpha" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Update="Properties/Resources.resx">
            <Generator>PublicResXFileCodeGenerator</Generator>
        </EmbeddedResource>
    </ItemGroup>
    
    <ItemGroup>
        <EmbeddedResource Include="../../common/avrdude.conf">
            <Link>Resources/avrdude.conf</Link>
        </EmbeddedResource>
        <EmbeddedResource Include="../../common/mcu-list.txt">
            <Link>Resources/mcu-list.txt</Link>
        </EmbeddedResource>
        <EmbeddedResource Include="../../common/reset.eep">
            <Link>Resources/reset.eep</Link>
        </EmbeddedResource>
        <EmbeddedResource Include="../../common/reset_left.eep">
            <Link>Resources/reset_left.eep</Link>
        </EmbeddedResource>
        <EmbeddedResource Include="../../common/reset_right.eep">
            <Link>Resources/reset_right.eep</Link>
        </EmbeddedResource>
        <EmbeddedResource Include="Resources/avrdude" />
        <EmbeddedResource Include="Resources/bootloadHID" />
        <EmbeddedResource Include="Resources/dfu-programmer" />
        <EmbeddedResource Include="Resources/dfu-util" />
        <EmbeddedResource Include="Resources/hid_bootloader_cli" />
        <EmbeddedResource Include="Resources/mdloader" />
        <EmbeddedResource Include="Resources/teensy-loader" />
        <EmbeddedResource Include="Resources/wb32-dfu-updater_cli" />
        <EmbeddedResource Include="Resources/libftdi1.so" />
        <EmbeddedResource Include="Resources/libusb.so" />

    </ItemGroup>


</Project>
